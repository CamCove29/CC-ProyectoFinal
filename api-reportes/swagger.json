{
    "openapi": "3.0.0",
    "info": {
        "title": "Reports API",
        "version": "1.0.0",
        "description": "API para generar, obtener y listar reportes de ventas."
    },
    "servers": [
        {
            "url": "https://ja84e1s9v8.execute-api.us-east-1.amazonaws.com/dev",
            "description": "Servidor de desarrollo"
        }
    ],
    "paths": {
        "/reports/sales": {
            "post": {
                "summary": "Generar un nuevo reporte de ventas",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "tenant",
                        "in": "header",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "description": "ID del tenant"
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Reporte generado exitosamente",
                        "content": {
                            "application/json": {
                                "example": {
                                    "report_id": "report_1733062533407",
                                    "status": "completed",
                                    "tenant_id": "tenant_1",
                                    "created_at": "2023-12-03T10:00:00Z"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Error generando el reporte",
                        "content": {
                            "application/json": {
                                "example": {
                                    "error": "Error generando el reporte de ventas"
                                }
                            }
                        }
                    }
                }
            },
            "get": {
                "summary": "Listar reportes de ventas",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "tenant",
                        "in": "header",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "description": "ID del tenant"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Lista de reportes de ventas",
                        "content": {
                            "application/json": {
                                "example": [
                                    {
                                        "report_id": "report_1733062533407",
                                        "status": "completed",
                                        "tenant_id": "tenant_1",
                                        "created_at": "2023-12-03T10:00:00Z"
                                    },
                                    {
                                        "report_id": "report_1733062533408",
                                        "status": "in_progress",
                                        "tenant_id": "tenant_1",
                                        "created_at": "2023-12-02T09:30:00Z"
                                    }
                                ]
                            }
                        }
                    },
                    "500": {
                        "description": "Error listando los reportes",
                        "content": {
                            "application/json": {
                                "example": {
                                    "error": "Error listando los reportes de ventas"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/reports/sales/{report_id}": {
            "get": {
                "summary": "Obtener un reporte de ventas espec√≠fico",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "tenant",
                        "in": "header",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "description": "ID del tenant"
                    },
                    {
                        "name": "report_id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "description": "ID del reporte"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Detalles del reporte",
                        "content": {
                            "application/json": {
                                "example": {
                                    "report_id": "report_1733062533407",
                                    "status": "completed",
                                    "tenant_id": "tenant_1",
                                    "created_at": "2023-12-03T10:00:00Z",
                                    "data": {
                                        "total_sales": 50000,
                                        "items_sold": 1200
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Reporte no encontrado",
                        "content": {
                            "application/json": {
                                "example": {
                                    "message": "Reporte no encontrado"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Error obteniendo el reporte",
                        "content": {
                            "application/json": {
                                "example": {
                                    "error": "Error obteniendo el reporte"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    }
}